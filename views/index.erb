<div class="new-post">
	<% if current_user %>
		<form action="/post" method="post">
			<input class="postbox" type="text" name="content">
			<input type="submit" value="submit">
		</form>
	<% end %>
</div>


<ul>
	<% @posts.each do |post| %>
		<div id="ind-post">
			<li>
				<div id="userpost"><%= "#{post.user.username}:" %></div>
				<div id="message"><%= post.content %></div>
				<div id="time"><%= post.created_at.strftime("%b %e, %l:%M %p")%></div>
			</li>
		</div>
	<% end %>
</ul>